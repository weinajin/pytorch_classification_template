{
    "name": "Skin_AlexNet",
    "n_gpu": 1,
    
    "arch": {
        "type": "AlexNet",
        "args": {}
    },
    "data_loader": {
        "type": "ISICDataLoader",
        "args":{
            "data_dir": "skindata/val.csv",  
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "overal_acc", "topk_acc"
    ],
    "class_metrics": [
        "class_acc", 
		"class_auc", "confusion_matrix" 
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "skinmodel/",
        "save_period": 1,
        "verbosity": 1,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "skinmodel/runs"
    },
    
    "nb_class": 2
}
